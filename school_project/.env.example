# Telegram Mini App auth
TELEGRAM_BOT_TOKEN=<your_bot_token>
TELEGRAM_AUTH_MAX_AGE_SEC=86400
# Comma-separated Telegram user IDs that can be auto-created as teacher
TELEGRAM_TEACHER_IDS=

# Optional runtime host/origin overrides
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.trycloudflare.com,.ngrok-free.app,.ngrok.app,.loca.lt
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3001,https://*.trycloudflare.com,https://*.ngrok-free.app,https://*.ngrok.app,https://*.loca.lt
DJANGO_CORS_ALLOW_ALL_ORIGINS=true
